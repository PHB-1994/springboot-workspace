<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.the.joeun.mapper.UsersMapper">

    <resultMap id="usersMap" type="edu.the.joeun.model.Users">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="email" column="email"/>
        <result property="role" column="role"/>
    </resultMap>

    <select id="getAllUsers" resultMap="usersMap">
        SELECT *
        FROM Users
        ORDER BY id DESC
    </select>

    <select id="getUsersById" parameterType="int" resultMap="usersMap">
        SELECT *
        FROM Users
        WHERE = #{id}
    </select>

    <insert id="insertUsers" parameterType="edu.the.joeun.model.Users">
        INSERT INTO Users(name, email, role)
        VALUES(${name}, ${email}, ${role})
    </insert>

</mapper>
